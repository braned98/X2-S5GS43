<Window x:Class="PR24_2017_PZ2.DimensionSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR24_2017_PZ2"
        mc:Ignorable="d"
        Title="DimensionSetting" Height="170" Width="200">
    <Grid>
        <StackPanel>
        <DockPanel Margin="10">
            <Label Margin="0, 0, 50, 0" >Size</Label>
                <TextBox Name="sizeValue" Width="80" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBox>
        </DockPanel>
            <DockPanel>
                <Label Name="errorSize" Foreground="Transparent">Size must be int. Minimum 100</Label>
            </DockPanel>
        <DockPanel Margin="10" VerticalAlignment="Center">
            <Button Width="50" Height="20" Margin="20, 10, 0, 0" Click="ConfirmClick">Confirm</Button>
                <Button Width="50" Height="20" Margin="0, 10, 0, 0" Click="CancelClick">Cancel</Button>
        </DockPanel>
        </StackPanel>
    </Grid>
</Window>
